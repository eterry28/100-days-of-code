{
    "name": "Web Testing Tool",
    "description": "Test various web page elements",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        },
        "default_title": "Web Testing Tool"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "storage", 
        "activeTab", 
        "contextMenus",
        "tabs"
    ]
}